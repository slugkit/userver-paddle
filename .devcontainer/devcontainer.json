{
    "name": "userver-paddle-devbox",
    "dockerComposeFile": "../docker-compose.yaml",
    "service": "devbox",
    "remoteUser": "user",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/user/workspace,type=bind",
    "workspaceFolder": "/home/user/workspace",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "forwardPorts": [
        8088
    ],
    "containerEnv": {
        "SHELL": "/bin/bash",
        "PREFIX": "${PREFIX:-~/.local}",
        "CCACHE_DIR": "/home/user/workspace/.ccache",
        "CORES_DIR": "/cores",
        "BUILD_TYPE": "Debug"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cmake-tools",
                "ms-vscode.makefile-tools",
                "vadimcn.vscode-lldb",
                "ms-azuretools.vscode-docker",
                "anysphere.remote-containers"
            ],
            "settings": {
                "cmake.automaticReconfigure": false,
                "cmake.configureOnEdit": false,
                "cmake.configureOnOpen": false,
                "cmake.copyCompileCommands": "${workspaceFolder}/.vscode/compile_commands.json",
                "clangd.path": "/usr/bin/clangd",
                "clangd.arguments": [
                    "--background-index",
                    "--compile-commands-dir=.vscode",
                    "--clang-tidy",
                    "--completion-style=detailed",
                    "--header-insertion=never"
                ]
            }
        }
    },
    "onCreateCommand": "sudo git config --global --add safe.directory /home/user/workspace && sudo git config --global --add safe.directory /userver",
    "mounts": []
}